@model JopList_VM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Delete Jop</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">New Jop </h3>
    </div>
    <div class="card-body">
        <form asp-action="Delete" asp-controller="JopList" enctype="multipart/form-data" class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="JopNameArabic" class="control-label">Jop Name Arabic</label>
                        <input asp-for="JopNameArabic" required class="form-control" />
                        <span asp-validation-for="JopNameArabic" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="JopNameEnglish" class="control-label">Jop Name English</label>
                        <input asp-for="JopNameEnglish" onkeypress="return (event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode >= 48 && event.charCode <= 57) || (event.charCode == 32 ) " required class="form-control" />
                        <span asp-validation-for="JopNameEnglish" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="JopCode" class="control-label">Jop Code</label>
                        <input asp-for="JopCode" required class="form-control" />
                        <span asp-validation-for="JopCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="occupationCode" class="control-label">Occupation Code</label>
                        <input asp-for="occupationCode" required class="form-control" />
                        <span asp-validation-for="occupationCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="JopCode" class="control-label">Skill level Arabic</label>
                        <input asp-for="SkilllevelArabic" required class="form-control" />
                        <span asp-validation-for="SkilllevelArabic" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="SkilllevelArabic" class="control-label">Skill level English</label>
                        <input asp-for="SkilllevelEnglish" required class="form-control" />
                        <span asp-validation-for="SkilllevelEnglish" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="qualificationArabic" class="control-label">Qualification Arabic</label>
                        <input asp-for="qualificationArabic" required class="form-control" />
                        <span asp-validation-for="qualificationArabic" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="qualificationEnglish" class="control-label">Qualification  English</label>
                        <input asp-for="qualificationEnglish" required class="form-control" />
                        <span asp-validation-for="qualificationEnglish" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0" />
                <a asp-action="Index" asp-controller="JopList" class="btn btn-sm btn-primary rounded-0">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}