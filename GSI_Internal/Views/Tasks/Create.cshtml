@model TaskMain_VM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                   Create Task
                   
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Create" asp-controller="Tasks" enctype="multipart/form-data" class="form-horizontal">
                <div class="row clearfix">

                    <div class="col-sm-3">
                        <label class="form-label">Receive Date</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="date" asp-for="DateOFReceving" name="DateOFReceving" class="datepicker form-control" placeholder="Please choose a date...">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Due Date</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="date" asp-for="DueDateOfEndTask" class="datepicker form-control" placeholder="Please choose a date...">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <label class="form-label">Assign To</label>
                        <div class="form-group">
                            <div class="form-line">
                                <select class="form-line" id="TransferToUser" name="TransferToUser" required asp-for="TransferToUser" asp-items="ViewBag.getAlluser">
                                    <option disabled=""> -- Please select User --</option>
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <label class="form-label"> Priority Level</label>
                        <div class="form-group">
                            <div class="form-line">
                                    <select asp-for="PriorityLevel" name="PriorityLevel" class="form-line">
                                    <option disabled="">-- Please select Priority --</option>
                                    <option value="1">Height</option>
                                    <option value="2">Miduam</option>
                                    <option value="3">Low</option>

                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                       
                        <div class="form-group">
                            <label class="form-label">Task Name</label>
                            <div class="form-line">
                                <input asp-for="TaskName" type="text" class="form-control" name="TaskName" required="" aria-required="true">

                            </div>
                        </div>
                    </div>


                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                      
                        <div class="form-group">
                            <label class="form-label">Task Note</label>
                            <div class="form-line">
                                    <textarea asp-for="TaskNote" name="TaskNote" cols="30" rows="5" class="form-control no-resize" required="" aria-required="true"></textarea>

                            </div>
                        </div>
                    </div>


                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Documentation</label>
                            <div class="form-line">
                                    <input asp-for="DocIform" type="file" class="form-control" multiple="" name="DocIform" required="" aria-required="true">

                            </div>
                        </div>
                    </div>


                </div>


                <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div>



