@model TransactionSubGroupVM
@{
    ViewData["Title"] = "Create New Main Services";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item text-uppercase"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                 <li class="breadcrumb-item text-uppercase"><a asp-action="Index" asp-controller="TransiactionSubGroup">Main Services</a></li>
              <li class="breadcrumb-item text-uppercase active">Create New Main Services</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>


<div class="card">
  <div class="card-header">
      <h3 class="text-uppercase">Create New Main Service</h3>
  </div>
  <div class="card-body">
      <form asp-action="Create" asp-controller="TransiactionSubGroup" enctype="multipart/form-data" class="form-horizontal">
          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="Entity Name"  class="control-label">Entity Name </label>
                   @*   <select class="custom-select" asp-for="TransactionGroupID" required class="form-control" asp-items=" ViewBag.SelectGroupTransaction" />*@

                       <select class="custom-select select2bs4" style="width: 100%;" id="TransactionGroupID" name="TransactionGroupID" required asp-for="TransactionGroupID"  asp-items=" ViewBag.SelectGroupTransaction" >

                        </select>
                      <span asp-validation-for="TransactionGroupID" class="text-danger"></span>
                  </div>
              </div>
           
          </div>
          <hr />
          <div class="row">
             <div class="col-md-6">
                <div class="form-group">
                    <label for="SubGroupNameArabic"  class="control-label">Main Services Name Arabic</label>
                    <input asp-for="SubGroupNameArabic" required class="form-control" />
                    <span asp-validation-for="SubGroupNameArabic" class="text-danger"></span>
                </div>
            </div>
            
             <div class="col-md-6">
                <div class="form-group">
                    <label for="SubGroupNameArabic"  class="control-label">Main Services Name English</label>
                    <input asp-for="SubGroupNameEnglish" required id="SubGroupNameEnglish" class="form-control" />
                    <span asp-validation-for="SubGroupNameEnglish" class="text-danger"></span>
                </div>
            </div>
          </div>

         <hr />
          <div class="form-group">
              <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0" />
              <input type="reset" value="Reset" class="btn btn-sm btn-secondary rounded-0" />
              <a asp-action="Index"  asp-controller="TransiactionSubGroup" class="btn btn-sm btn-primary rounded-0">Back to List</a>
          </div>
      </form>
  </div>
</div>



