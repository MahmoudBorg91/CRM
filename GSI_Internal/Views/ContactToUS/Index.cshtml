@model ContactUsVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="aon-contact-area">
    <div class="container">
        <!--Title Section Start-->
        <div class="section-head text-center">
            <h2 class="sf-title">Contact Information</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do usmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>
        <!--Title Section End-->

        <div class="section-content mt-3">

            <div class="sf-contact-info-wrap mt-3">
                <div class="row">

                    <!-- COLUMNS 1 -->
                    <div class="col-lg-4 col-md-6">
                        <div class="sf-contact-info-box">
                            <div class="sf-contact-icon">
                                <span><img src="~/Client/images/contact-us/1.png" alt=""></span>
                            </div>
                            <div class="sf-contact-info">
                                <h4 class="sf-title"> Address</h4>
                                <p>
                                    @Model.Location
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- COLUMNS 2 -->
                    <div class="col-lg-4 col-md-6">
                        <div class="sf-contact-info-box">
                            <div class="sf-contact-icon">
                                <span><img src="~/Client/images/contact-us/2.png" alt=""></span>
                            </div>
                            <div class="sf-contact-info">
                                <h4 class="sf-title">Email Info</h4>
                                <p>info@brandcoin.com</p><p> info@nebuae.com</p>
                            </div>
                        </div>
                    </div>
                    <!-- COLUMNS 3 -->
                    <div class="col-lg-4 col-md-6">
                        <div class="sf-contact-info-box">
                            <div class="sf-contact-icon">
                                <span><img src="~/Client/images/contact-us/3.png" alt=""></span>
                            </div>
                            <div class="sf-contact-info">
                                <h4 class="sf-title">Phone Number</h4>
                                <p>  @Model.PhoneNumber (24/7 Support Line)</p>
                                <p>  @Model.PhoneNumber2</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <form asp-action="SentMail" asp-controller="ContactToUS" enctype="multipart/form-data" class="form-horizontal">
            <div class="sf-contact-form-wrap">
                <!--Contact Information-->
                <div class="sf-contact-form">
                    <div class="sf-con-form-title text-center">
                        <h2 class="m-b30">Contact Information</h2>
                    </div>
                    <form class="contact-form mt-3" method="post">
                        <div class="row">

                            <!-- COLUMNS 1 -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="MailContactUs_Vm.FirstName" type="text" name="FirstName" placeholder="First Name" class="form-control" required="">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                        <input asp-for="MailContactUs_Vm.LastName" type="text" name="LastName" placeholder="Last Name" class="form-control" required="">
                                </div>
                            </div>
                            <!-- COLUMNS 2 -->
                            <div class="col-md-6">
                                <div class="form-group">
                                        <input asp-for="MailContactUs_Vm.Email" type="email" name="Email" placeholder="Email" class="form-control" required="">
                                </div>
                            </div>
                            <!-- COLUMNS 3 -->
                            <div class="col-md-6">
                                <div class="form-group">
                                        <input asp-for="MailContactUs_Vm.Phone" type="tel" name="phone" placeholder="Phone" class="form-control">
                                </div>
                            </div>
                            <!-- COLUMNS 4 -->
                            <div class="col-md-6">
                                <div class="form-group">
                                        <input asp-for="MailContactUs_Vm.Subject" type="Subject" name="subject" placeholder="Subject" class="form-control" required="">
                                </div>
                            </div>

                            <!-- COLUMNS 5 -->
                            <div class="col-md-12">
                                <div class="form-group">
                                        <textarea asp-for="MailContactUs_Vm.Note" name="Note" placeholder="Message" class="form-control" required=""></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 form-group">
                            <button class="theme-btn btn-style-two" type="submit" name="submit-form">submit</button>
                        </div>
                    </form>
                </div>
                <!--Contact Information End-->
            </div>
            </form>
        </div>

    </div>

    <div class="section-full sf-contact-map-area">
        <div class="container">

            <div class="sf-map-social-block text-center">
                <h2>Trusted by thousands of people all over the world</h2>
                <ul class="sf-con-social">
                    <li><a href="#" class="sf-fb"><img src="images/contact-us/facebook.png" alt="">Facebook</a></li>
                    <li><a href="#" class="sf-twitter"><img src="images/contact-us/twitter.png" alt="">Twitter</a></li>
                    <li><a href="#" class="sf-pinterest"><img src="images/contact-us/pinterest.png" alt="">Pinterest</a></li>
                </ul>

                <div class="sf-con-social-pic">
                    <span class="img-pos-1"><img src="images/contact-us/img1.png" alt=""></span>
                    <span class="img-pos-2"><img src="images/contact-us/img2.png" alt=""></span>
                    <span class="img-pos-3"><img src="images/contact-us/img3.png" alt=""></span>
                    <span class="img-pos-4"><img src="images/contact-us/r-img1.png" alt=""></span>
                    <span class="img-pos-5"><img src="images/contact-us/r-img2.png" alt=""></span>
                    <span class="img-pos-6"><img src="images/contact-us/r-img3.png" alt=""></span>
                </div>
            </div>

        </div>
        <div class="sf-map-wrap">
            <div class="gmap-area">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3722504.4613757664!2d51.71165723962083!3d24.33749472870473!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5e48dfb1ab12bd%3A0x33d32f56c0080aa7!2sUnited%20Arab%20Emirates!5e0!3m2!1sen!2seg!4v1669079981400!5m2!1sen!2seg" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

