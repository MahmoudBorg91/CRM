@*@using Microsoft.AspNetCore.Identity*@
@using GSI_Internal.Contants
@using GSI_Internal.Entites
@using Microsoft.AspNetCore.Mvc.TagHelpers

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Welcome To | Bootstrap Based Admin Template - Material Design</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Client/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Client/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Client/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Morris Chart Css-->
    <link href="~/Client/plugins/morrisjs/morris.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Client/css/style.css" rel="stylesheet">
    <!-- Bootstrap Select Css -->
    <link href="~/Client/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Client/css/themes/all-themes.css" rel="stylesheet" />
    <!-- Bootstrap Material Datetime Picker Css -->
    <link href="~/Client/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" />
    
<!-- JQuery DataTable Css -->
    <link href="~/Client/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.css" rel="stylesheet" />
   
   
</head>

<body class="theme-red">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Search Bar -->
    <div class="search-bar">
        <div class="search-icon">
            <i class="material-icons">search</i>
        </div>
        <input type="text" placeholder="START TYPING...">
        <div class="close-search">
            <i class="material-icons">close</i>
        </div>
    </div>
    <!-- #END# Search Bar -->
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand" href="index.html">Urban Growth - DEPARTMENT OF MUNICIPALITIES AND TRANSPORTS</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <!-- Call Search -->
                    <li><a href="javascript:void(0);" class="js-search" data-close="true"><i class="material-icons">search</i></a></li>
                    <!-- #END# Call Search -->
                    <!-- Notifications -->
                
                    <!-- user menu -->
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
                            <i class="material-icons">account_circle</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a asp-controller="UserProfile" asp-action="Index"><i class="material-icons">person</i>Profile</a></li>
                            <li role="seperator" class="divider"></li>
                            <li><a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="material-icons">group</i>Setting</a></li>
                       
                            <li role="seperator" class="divider"></li>
                            <li>
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Identity/Account/Login">
                                    <button class="nav-link btn btn-link text-dark" type="submit">
                                        <i class="material-icons">input</i>Sign Out
                                    </button>
                              
                                    @*  <b href="javascript:void(0);"><i class="material-icons">input</i>Sign Out</b>*@
                                </form>
                            </li>
                        </ul>
                    </li>
                    <!-- #END# Tasks -->
                    <li class="pull-right"><a href="javascript:void(0);" class="js-right-sidebar" data-close="true"><i class="material-icons">more_vert</i></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
        <div class="user-info">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="info-container">
                <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></div>
                        <div class="email">Hello @UserManager.GetUserName(User)!</div>
                <div class="btn-group user-helper-dropdown">
                    <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                    <ul class="dropdown-menu pull-right">
                        <li><a asp-controller="UserProfile" asp-action="Index"><i class="material-icons">person</i>Profile</a></li>
                        <li role="seperator" class="divider"></li>
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="material-icons">group</i>Setting</a></li>
                       
                        <li role="seperator" class="divider"></li>
                        <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Identity/Account/Login">
                                        <button class="nav-link btn btn-link text-dark" type="submit">
                                    <i class="material-icons">input</i>Sign Out
                                </button>
                              
                              @*  <b href="javascript:void(0);"><i class="material-icons">input</i>Sign Out</b>*@
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        }

        </div>
            <!-- #User Info -->
            <!-- Menu -->
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="menu">
                <ul class="list">
                    <li class="header">MAIN NAVIGATION</li>
                    <li>
                        <a asp-controller="Dashboard" asp-action="index">
                            <i class="material-icons">home</i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Tasks" asp-action="Create">
                            <i class="material-icons">text_fields</i>
                            <span>Create Task</span>
                        </a>
                    </li>

                    <li>
                            <a href="javascript:void(0);" class="menu-toggle">
                                <i class="material-icons">assignment_ind</i>
                                <span>Manage Users (MU)</span>
                            </a>
                            <ul class="ml-menu">
                               
                                <li>
                                    <a asp-action="Index" asp-controller="Roles">
                                        <i class="material-icons">layers</i>
                                        <span>Manage Role</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Identity" asp-page="/Account/Register">
                                        <i class="material-icons">layers</i>
                                        <span>Create user</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Index" asp-controller="Users">
                                        <i class="material-icons">layers</i>
                                        <span>Manage Users</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                                <i class="material-icons">cast</i>
                            <span>Manage Request (MR)</span>
                        </a>
                        <ul class="ml-menu">
                               
                            <li>
                                <a asp-controller="RequestMangment" asp-action="CreateRequest">
                                        <i class="material-icons">directions_run</i>
                                    <span>Create Request</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="RequestData" asp-action="Create">
                                    <i class="material-icons">text_fields</i>
                                    <span>Create New Type Request</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                 
                  

                </ul>
            </div>
            <!-- #Menu -->
        }
            <!-- Footer -->
            <div class="legal">
                <div class="version">
                    <b>Power By BLITZ </b> 
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
     
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            
             @RenderBody() 
            <!-- Widgets -->
          
        </div>
    </section>

    <!-- Jquery Core Js -->
    <script src="~/Client/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/Client/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Select Plugin Js -->
    <script src="~/Client/plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="~/Client/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Client/plugins/node-waves/waves.js"></script>
      <!-- Select Plugin Js -->
      <script src="~/Client/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <!-- Jquery CountTo Plugin Js -->
    <script src="~/Client/plugins/jquery-countto/jquery.countTo.js"></script>

    <!-- Morris Plugin Js -->
    <script src="~/Client/plugins/raphael/raphael.min.js"></script>
<script src="~/Client/plugins/morrisjs/morris.js"></script>
<script src="~/Client/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>


    <!-- ChartJs -->
    <script src="~/Client/plugins/chartjs/Chart.bundle.js"></script>

    <!-- Flot Charts Plugin Js -->
    <script src="~/Client/plugins/flot-charts/jquery.flot.js"></script>
    <script src="~/Client/plugins/flot-charts/jquery.flot.resize.js"></script>
    <script src="~/Client/plugins/flot-charts/jquery.flot.pie.js"></script>
    <script src="~/Client/plugins/flot-charts/jquery.flot.categories.js"></script>
    <script src="~/Client/plugins/flot-charts/jquery.flot.time.js"></script>

    <!-- Sparkline Chart Plugin Js -->
    <script src="~/Client/plugins/jquery-sparkline/jquery.sparkline.js"></script>

   
   

<!-- Jquery DataTable Plugin Js -->
<script src="~/Client/plugins/jquery-datatable/jquery.dataTables.js"></script>
<script src="~/Client/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/buttons.flash.min.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/jszip.min.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/pdfmake.min.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/vfs_fonts.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/buttons.html5.min.js"></script>
<script src="~/Client/plugins/jquery-datatable/extensions/export/buttons.print.min.js"></script>
<!-- Custom Js -->
<script src="~/Client/js/admin.js"></script>
@*<script src="~/Client/js/pages/index.js"></script>*@
<script src="~/Client/js/pages/tables/jquery-datatable.js"></script>
<!-- Demo Js -->
<script src="~/Client/js/demo.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>

</html>

