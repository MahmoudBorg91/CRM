@model GSI_Internal.Models.ViewModel.HomeVM
@{
    ViewData["Title"] = "showSelectedGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
        .swiper {
            width: 969px;
        }

        .card {
            position: relative;
            background: #fff;
            border-radius: 20px;
            margin: 20px 0;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

            .card::before {
                content: "";
                position: absolute;
                height: 40%;
                width: 100%;
                /* background: #c39946; */
                border-radius: 20px 20px 0 0;
            }

            .card .card-content {
                display: flex;
                flex-direction: column;
                align-items: center;
                padding: 30px;
                position: relative;
                z-index: 100;
            }

        section .card .image {
            height: 140px;
            width: 140px;
            border-radius: 50%;
            padding: 3px;
            background: #c39946;
        }

            section .card .image img {
                height: 100%;
                width: 100%;
                object-fit: cover;
                border-radius: 50%;
                border: 3px solid #fff;
            }

        .card .media-icons {
            position: absolute;
            top: 10px;
            right: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .card .media-icons i {
                color: #fff;
                opacity: 0.6;
                margin-top: 10px;
                transition: all 0.3s ease;
                cursor: pointer;
            }

                .card .media-icons i:hover {
                    opacity: 1;
                }

        .card .name-profession {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 10px;
        }

        .name-profession .name {
            font-size: 20px;
            font-weight: 600;
        }

        .name-profession .profession {
            font-size: 15px;
            font-weight: 500;
        }

        .card .rating {
            display: flex;
            align-items: center;
            margin-top: 18px;
        }

            .card .rating i {
                font-size: 18px;
                margin: 0 2px;
                color: #c39946;
            }

        .card .button {
            width: 100%;
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

            .card .button button {
                background: #c39946;
                outline: none;
                border: none;
                color: #fff;
                padding: 8px 22px;
                border-radius: 20px;
                font-size: 14px;
                transition: all 0.3s ease;
                cursor: pointer;
            }

        .button button:hover {
            background: #6616d0;
        }

        .swiper-pagination {
            position: absolute;
        }

        .swiper-pagination-bullet {
            height: 7px;
            width: 26px;
            border-radius: 25px;
            background: #c39946;
        }

        .swiper-button-next, .swiper-button-prev {
            opacity: 0.7;
            color: #c39946;
            top: 60% !important;
            transition: all 0.3s ease;
        }

            .swiper-button-next:hover, .swiper-button-prev:hover {
                opacity: 1;
                color: #c39946;
            }

        .credit a {
            text-decoration: none;
            color: #c39946;
            font-weight: 800;
        }

        .credit {
            text-align: center;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }

    </style>

}
<div class="preloader"></div>

<section class="ls-section style-two">
    <div class="auto-container">
        <div class="filters-backdrop"></div>
        <div class="row">

            <!-- Filters Column -->
            <div class="filters-column col-lg-3 col-md-12 col-sm-12">
                <div class="inner-column">
                    <button type="button" class="theme-btn close-filters">X</button>
                    <ul class="top-filters">
                        <li class="active">Keyword</li>
                    </ul>
                    <div class="listing-search-form">
                        <form>
                            <div class="row">
                                <div class="form-group col-lg-12 col-md-12 col-sm-12 location">
                                    <input type="text" name="listing-search"
                                           placeholder="Keyword main services">
                                    <span class="icon flaticon-search"></span>
                                </div>
                            </div>
                            <div class="mt-3">
                                <a href="#" class="theme-btn btn-style-one bg-blue">
                                    Search Now<span class="icon flaticon-right"></span>
                                </a>
                            </div>
                            <div class="mt-3">
                               @* <a href="#" class="theme-btn btn-style-one bg-blue filter-button">
                                    All Main Services<span class="icon flaticon-right" data-filter="all"></span>
                                </a>*@
                                <button class=" theme-btn btn-style-one bg-blue filter-button" data-filter="all">All Main Services <span class="icon flaticon-right" data-filter="all"></span> </button>
                            </div>
                        </form>
                    </div>
                    
                    <div class="checkbox-outer">
                        <h4>Tags</h4>
                        <ul class="checkboxes two-column">
                            @foreach (var item in Model.TransactionSubGroupVM.Select((value, i) => new { i, value }))
                            {
                                <li>

                                    <a class="filter-button" data-filter="@item.value.SubGroupNameEnglish.Replace(' ','_')">
                                        <h5> @item.value.SubGroupNameEnglish</h5>
                                        <p>@item.value.count services</p>
                                    </a>
                                </li>
                            }
                   
                          


                        </ul>
                    </div>
                   
                </div>
            </div>

            <!-- Content Column -->
            <div class="content-column col-lg-9 col-md-12 col-sm-12">
                @*<section class="listing-section style-two pb-50">
                    <div class="sec-title text-center">
                        <h2>Popular services</h2>
                        <span class="divider"></span>
                       
                    </div>
                    <div class="swiper mySwiper container">
                        <div class="swiper-wrapper content">
               
            
                            @foreach (var item in Model.PopularTransactionItemVMINGroup)
                            {
              
              
                                <partial name="_PopularServices" model="item" />
                
                            }

                        </div>
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
                </section>*@

                <div class="ls-outer">
                   
                    
                    @foreach (var item in Model.TransactionItemVM)
                    {
                        <!-- Listing Block Five -->
                        <div class="listing-block-seven filter @item.TransactionSubGroupNameEnglish.Replace(' ','_')">
                            <div class="inner-box">
                                <div class="image-box">
                                    <a href="/Home/SelectFavoirotServives/@item.ID"><figure class="image"><img src="~/Image/ItemTransPhoto/@item.ServicesPhoto" alt=""></figure></a>
                                </div>
                                <div class="content-box">
                                    <div class="upper-box">
                                        <h3>
                                            <a href="/Home/SelectFavoirotServives/@item.ID">
                                                @item.TransactionNameEnglish
                                            </a>
                                        </h3>
                                        <div class="status">@item.TransactionSubGroupNameEnglish</div>
                                        <div class="text">
                                            <span><i class="fa fa-money"></i></span> Government Fees
                                            :@item.GovernmentFees AED - Services Fees : @item.Price AED
                                        </div>
                                    </div>
                                    <div class="btn-box">
                                      @*  <button class="theme-btn btn-style-one small bg-purple"><span class="icon flaticon-delete-button"></span>Delete</button>*@
                                    </div>
                                </div>
                            </div>

                        </div>
                    }    
                    



                    <!-- Pagination -->
                    <nav class="ls-pagination">
                        <ul>
                            <li class="prev"><a href="#"><i class="flaticon-left"></i> Prev</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#" class="current-page">2</a></li>
                            <li><a href="#">3</a></li>
                            <li>...</li>
                            <li><a href="#">14</a></li>
                            <li class="next"><a href="#">Next <i class="flaticon-right"></i> </a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{

    @*
<script src="~/lib/Jquerydatatable/bootstrap-datepicker.min.js"></script>*@


    <script>
        $(document).ready(function () {
            $(".filter-button").click(function() {
                //console.log("click");
                var value = $(this).attr('data-filter');
                if (value == "all") {

                    $('.filter').show('1000');
                } else {
                    console.log(value);
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');
                }
            });
 



        });
    </script>
}


