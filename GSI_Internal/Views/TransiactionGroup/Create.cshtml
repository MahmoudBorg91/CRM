@model TransactionGroupVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active">Create New Entiy</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

<div class="card">
  <div class="card-header">
      <h3 class="text-uppercase">new Entity</h3>
  </div>
  <div class="card-body">
      <form asp-action="Create" asp-controller="TransiactionGroup" enctype="multipart/form-data" class="form-horizontal">
          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="TransactionGroup_NameArabic"  class="control-label">Entity Name Arabic</label>
                      <input asp-for="TransactionGroup_NameArabic"  required class="form-control" />
                      <span asp-validation-for="TransactionGroup_NameArabic" class="text-danger"></span>
                  </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                    <label for="TransactionGroup_NameEnglish"   class="control-label">Entity Name English</label>
                    <input asp-for="TransactionGroup_NameEnglish" onkeypress="return (event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode >= 48 && event.charCode <= 57) || (event.charCode == 32 ) " required class="form-control" />
                    <span asp-validation-for="TransactionGroup_NameEnglish" class="text-danger"></span>
                </div>
            </div>
          </div>
          <div class="row">
          
            <div class="col-md-6">
              <div class="form-group">
                  <label for="logo" class="control-label"></label>
                  <div class="custom-file">
                      <input asp-for="logo" class="custom-file-input" />
                      <label class="custom-file-label" for="customFile">Choose file</label>
                  </div>
                  <span asp-validation-for="logo" class="text-danger"></span>
              </div>
          </div>
          </div>


          <div class="form-group">
              <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0" />
              <a asp-action="Index"  asp-controller="TransiactionGroup" class="btn btn-sm btn-primary rounded-0">Back to List</a>
          </div>
      </form>
  </div>
</div>


@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}