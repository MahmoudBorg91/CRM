@model TransactionItem_TypeVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit New Type</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">new Entity</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="TransactionItemType" enctype="multipart/form-data" class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="NameArabic" class="control-label">Type Name Arabic</label>
                        <input asp-for="NameArabic" required class="form-control" />
                        <span asp-validation-for="NameArabic" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="NameEnglish" class="control-label">Type Name English</label>
                        <input asp-for="NameEnglish" onkeypress="return (event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode >= 48 && event.charCode <= 57) || (event.charCode == 32 ) " required class="form-control" />
                        <span asp-validation-for="NameEnglish" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="logo" class="control-label">Icon</label>
                        <div class="custom-file">
                            <input asp-for="IconIFormFile" class="custom-file-input" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="IconIFormFile" class="text-danger"></span>
                        <img src="@Model.Icon" class="img-thumbnail" height="80" width="80"  />
                    </div>
                </div>



            </div>


            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-sm btn-primary rounded-0" />
                <a asp-action="Index" asp-controller="TransactionItemType" class="btn btn-sm btn-primary rounded-0">Back to List</a>
            </div>
        </form>
    </div>
</div>
