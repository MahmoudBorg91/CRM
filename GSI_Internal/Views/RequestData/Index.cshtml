@model IEnumerable<Request_DataVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row clearfix">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
       
        <div class="card">
            <div class="header">
                <h2>
                    Request Data
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div>
                   @* <a asp-controller="RequestData" asp-action="Create">Create New Type Of Request</a>*@
                    <a asp-controller="RequestData" asp-action="Create" class="btn bg-indigo waves-effect">Create New Type Of Request</a>
                </div>
                <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                    <thead>
                    <tr>
                        <th>Request Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Request Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.RequestName</td>

                            <td>

                                <a asp-controller="RequestData" asp-action="Edit" asp-route-Id="@item.ID" class="btn bg-indigo waves-effect">Edit</a>

                            </td>
                            <td>

                                <a asp-controller="RequestData" asp-action="Delete" asp-route-Id="@item.ID" class="btn bg-indigo waves-effect">Delete</a>

                            </td>






                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

