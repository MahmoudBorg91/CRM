@model Request_DataVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Create Task

                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Create" asp-controller="RequestData" enctype="multipart/form-data" class="form-horizontal">
                  

                    <div class="row clearfix">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="form-label">Request Type Name</label>
                                <div class="form-line">
                                    <input asp-for="RequestName" type="text" class="form-control" name="RequestName" required="" aria-required="true">

                                </div>
                            </div>
                        </div>


                    </div>
                  


                    <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div>

