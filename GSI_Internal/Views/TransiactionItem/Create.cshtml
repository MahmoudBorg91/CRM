@model TransactionItemVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item text-uppercase"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                 <li class="breadcrumb-item text-uppercase"><a asp-action="Index" asp-controller="TransiactionItem">Sub Services</a></li>
              <li class="breadcrumb-item text-uppercase active">Create New Sub Services</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>



    <div class="card">
  <div class="card-header">
      <h3 class="text-uppercase">Create New Sub Service</h3>
  </div>
  <div class="card-body">
      <form asp-action="Create" asp-controller="TransiactionItem" enctype="multipart/form-data" class="form-horizontal">
          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="Entity Name"  class="control-label">Entity Name </label>
                   @*   <select class="custom-select" asp-for="TransactionGroupID" required class="form-control" asp-items=" ViewBag.SelectGroupTransaction" />*@

                       <select class="custom-select select2bs4" style="width: 100%;" id="TransactionGroupID" name="TransactionGroupID" required asp-for="TransactionGroupID"   asp-items="@(new SelectList( ViewBag.SelectGroupTransaction,"ID","TransactionGroup_NameArabic"))" >
                            <option disabled>Select Entity</option>
                        </select>
                       
                      <span asp-validation-for="TransactionGroupID" class="text-danger"></span>
                  </div>
              </div>
              
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="Entity Name"  class="control-label">Sub Services Name </label>
                   @*   <select class="custom-select" asp-for="TransactionGroupID" required class="form-control" asp-items=" ViewBag.SelectGroupTransaction" />*@

                       <select class="custom-select select2bs4" style="width: 100%;" id="TransactionSubGroupID" name="TransactionSubGroupID" required asp-for="TransactionSubGroupID"   asp-items="@(new SelectList( ViewBag.SelecttransactionSubGroup ,"ID","SubGroupNameArabic"))" >
                            <option disabled>Select Main Services</option>
                        </select>
                       
                      <span asp-validation-for="TransactionSubGroupID" class="text-danger"></span>
                  </div>
              </div>
          </div>
          <hr />
          <div class="row">
             <div class="col-md-6">
                <div class="form-group">
                    <label for="TransactionNameArabic"  class="control-label">Sub Services Name Arabic</label>
                    <input asp-for="TransactionNameArabic" required class="form-control" />
                    <span asp-validation-for="TransactionNameArabic" class="text-danger"></span>
                </div>
            </div>
            
             <div class="col-md-6">
                <div class="form-group">
                    <label for="TransactionNameEnglish"  class="control-label">Sub Services Name English</label>
                    <input asp-for="TransactionNameEnglish" required id="TransactionNameEnglish" class="form-control" />
                    <span asp-validation-for="TransactionNameEnglish" class="text-danger"></span>
                </div>
            </div>
          </div>
           <hr />
          <div class="row">
             <div class="col-md-6">
                <div class="form-group">
                    <label for="GovernmentFees"  class="control-label">Government Fees</label>
                    <input type="number" asp-for="GovernmentFees" required class="form-control" />
                    <span asp-validation-for="GovernmentFees" class="text-danger"></span>
                </div>
            </div>
            
             <div class="col-md-6">
                <div class="form-group">
                    <label for="Price"  class="control-label">Services Charge</label>
                    <input type="number" asp-for="Price" required id="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
          </div>
           <hr />
          <div class="row">
             <div class="col-md-6">
                <div class="form-group">
                    <label for="ServicesDecription_Arabic"  class="control-label">Services Decription In Arabic</label>
                    <textarea class="form-control" rows="3"  asp-for="ServicesDecription_Arabic" placeholder="Enter ..."></textarea>
                    <span asp-validation-for="ServicesDecription_Arabic" class="text-danger"></span>
                </div>
            </div>
            
             <div class="col-md-6">
                <div class="form-group">
                    <label for="Price"  class="control-label">Services Decription In English</label>
                     <textarea class="form-control" rows="3"  asp-for="ServicesDecription_English" placeholder="Enter ..."></textarea>
                    <span asp-validation-for="ServicesDecription_English" class="text-danger"></span>
                </div>
            </div>
          </div>
           <hr />
          <div class="row">
          
            <div class="col-md-6">
              <div class="form-group">
                  <label for="logo" class="control-label"></label>
                  <div class="custom-file">
                      <input asp-for="ServicesPhotoVM" class="custom-file-input" />
                      <label class="custom-file-label" for="customFile">Choose file</label>
                  </div>
                  <span asp-validation-for="ServicesPhotoVM" class="text-danger"></span>
              </div>
          </div>

              <div class="col-md-3">
                  <div class="form-group">
                      <label for="SetInMostServices"  class="control-label">Set In Most Services</label>
                      <input type="checkbox" asp-for="SetInMostServices" id="SetInMostServices"  class="form-control" />
                     
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label for="SetInMostServices_INSubGroup"  class="control-label">Set In Most Entities</label>
                      <input type="checkbox" asp-for="SetInMostServices_INSubGroup" id="SetInMostServices_INSubGroup"  class="form-control" />
                     
                  </div>
              </div>
      
          </div>
          <hr />
          <div class="row">
             <div class="col-md-6">
                <div class="form-group">
                    <label for="Time_Services_Arabic"  class="control-label">Time Services Arabic</label>
                    <input type="text" asp-for="Time_Services_Arabic" required class="form-control" />
                    <span asp-validation-for="Time_Services_Arabic" class="text-danger"></span>
                </div>
            </div>
            
             <div class="col-md-6">
                <div class="form-group">
                    <label for="Time_Services_English"  class="control-label">Time Services English</label>
                    <input type="text" asp-for="Time_Services_English" required id="Time_Services_English" class="form-control" />
                    <span asp-validation-for="Time_Services_English" class="text-danger"></span>
                </div>
            </div>
          </div>
          <hr />
          <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="Services_Conditions_Arabic"  class="control-label">Services Conditions Arabic</label>
                      <input type="text" asp-for="Services_Conditions_Arabic" required class="form-control" />
                      <span asp-validation-for="Services_Conditions_Arabic" class="text-danger"></span>
                  </div>
              </div>
            
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="Services_Conditions_English"  class="control-label">Services Conditions English</label>
                      <input type="text" asp-for="Services_Conditions_English" required id="Services_Conditions_English" class="form-control" />
                      <span asp-validation-for="Services_Conditions_English" class="text-danger"></span>
                  </div>
              </div>
          </div>
          <hr/>
          <div class="form-group">
              <input type="submit" value="Create" class="btn btn-sm btn-primary rounded-0" />
              <input type="reset" value="Reset" class="btn btn-sm btn-secondary rounded-0" />
              <a asp-action="Index"  asp-controller="TransiactionItem" class="btn btn-sm btn-primary rounded-0">Back to List</a>
          </div>
      </form>
  </div>
</div>



<script src="~/myScripts.js"></script>



      @section Scripts{
        <script>
                    // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });

            $(function () {

             $('#TransactionGroupID').change(function () {

                var x = $('#TransactionGroupID').val();
                 
                

                var url = '@Url.Content("~/")' + "TransiactionItem/getSubGroup/"+x+"";
                

                var ddlsource = "#TransactionGroupID";

                $.getJSON(url, { ID: $(ddlsource).val() }, function (data) {

                    var items = '';
                    $('#TransactionSubGroupID').empty();
                  
                    $.each(data, function (i, app) {
                        items += "<option value='" + app.Value + "'>" + app.Text + "</option>"

                    });
                    $('#TransactionSubGroupID').html(items);
                });
            }).change();
             $('.select2').select2();

    //Initialize Select2 Elements
             $('.select2bs4').select2({
                 theme: 'bootstrap4'
             });
            });

        </script>
           @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }